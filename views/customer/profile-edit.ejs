<%-include('../partials/header.html')%>
    <link rel="stylesheet" href="/../../css/customer.css">
    <title>customer Profile Edit</title>
    </head>

    <body>

        <%-include('partials/navbar.html')%>
        <div class="container-fluid">
            <div class="row">
                <%-include('partials/sidebar.html')%>
                <div class="col-md-10 content">
                    <div class="row">
                        <div class="col-md-11 profile-content">
                            <p class="display-4">Edit Profile</p>
                            <form class="" method="post">
                                <input type="text" name="user_id" value="<%=res.user_id%>" hidden>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" value="<%=res.name%>" name="name">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" value="<%=res.email%>" name="email">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Phone</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" value="<%=res.phone%>" name="phone">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Address</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" value="<%=res.address%>" name="address">
                                    </div>
                                </div>
                                <hr>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                                            
                                        <form action="/store-image" method="POST" enctype="multipart/form-data">
                                        <p><%=(typeof alertMsg!='undefined')? alertMsg:''%></p>
                                        <input type="file"  name="image" multiple  required>
                                        <!-- <button type="submit">Upload</button> -->
                                        
                                    </div>
                                    &nbsp;
                                    <span>Select Gender </span>
                                    <br>&nbsp; &nbsp;
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="gender" id="exampleRadios1" value="Male" checked>
                                        <label class="form-check-label" for="exampleRadios1">
                Male
              </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="gender" id="exampleRadios2" value="Female">
                                        <label class="form-check-label" for="exampleRadios2">
                Female
              </label>
                                    </div>
                                </div>
                                <hr>
                                <div>
                                    <button type="submit" class="btn btn-primary">Update</button>
                                    <br>
                                </div>
                                <div class="">
                                    <% for(var i=0; i< errs.length; i++){ %>
                                        <%= errs[i].message; %>
                                        <br>
                                    <% } %>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

<%-include('../partials/footer.html')%>
